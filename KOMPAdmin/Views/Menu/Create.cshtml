@model KOMPAdmin.Models.MenuModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Create Menu</h1>



        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <a href="@Url.Action("Index","Menu")" class="btn btn-default"><i class="fa fa-list"></i> List of Menu</a>
        @using (Html.BeginForm("Create","Menu",FormMethod.Post,new { encType = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-inline">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-xs-4 col-md-4">
                    @Html.LabelFor(model => model.Header, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Header, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-xs-4 col-md-4">
                    @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-4 col-md-4">
                    @Html.LabelFor(model => model.ShowInBoth, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.ShowInBoth, new SelectList(ViewBag.ShowInBoth, "Value", "Text"), "-- Select --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShowInBoth, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-xs-4 col-md-4">
                    @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Picture, new { type = "file", name = "Files" })
                    @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-4 col-md-4">
                    @Html.LabelFor(model => model.HeaderCus, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.HeaderCus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HeaderCus, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-4 col-md-4">
                    @Html.LabelFor(model => model.DetailCus, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DetailCus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DetailCus, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-xs-4 col-md-4">
                    <br />
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive)
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                                <button type="reset" class="btn btn-default"><i class="fa fa-eraser"></i> Clear</button>
                            </div>
                        </div>
                    </div>
        }
        </div>
</div>

        @section Scripts {
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")
        }
